<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#6565f8"
                android:endColor="#abd0f4"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#abd0f4" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#6565f8"
                android:startColor="#abd0f4"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#abd0f4" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#6565f8"
                android:startColor="#abd0f4"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#abd0f4" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
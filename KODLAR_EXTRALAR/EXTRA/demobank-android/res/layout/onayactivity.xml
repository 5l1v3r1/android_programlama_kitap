<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:id="@+id/widget29"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
android:background="#ff8fc0eb"
>

<RelativeLayout 
android:layout_width="fill_parent"
android:layout_height="50dip"
android:layout_gravity="center_vertical|center_horizontal">

<ImageView android:id="@+id/Logo"
android:layout_centerInParent="true" 
android:layout_height="wrap_content" 
android:src="@drawable/demobank" 
android:layout_width="wrap_content"/>

</RelativeLayout>

<RelativeLayout 
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_gravity="center_vertical|center_horizontal">

<ImageView android:id="@+id/ok"
android:layout_centerInParent="true" 
android:layout_height="wrap_content" 
android:src="@drawable/ok" 
android:layout_width="wrap_content"/>

</RelativeLayout>


<TableLayout
android:id="@+id/hesapHisseTitle"
android:layout_width="fill_parent"
android:layout_height="150dip">

<TableRow android:layout_width="fill_parent" 
android:layout_height="fill_parent"
android:layout_weight="1"
android:gravity="center"
android:layout_gravity="center">

<TextView android:id="@+id/onayText"
android:layout_width="wrap_content" 
android:layout_height="wrap_content"
android:textSize="20dip"
android:textStyle="bold"
android:gravity="center"
android:textColor="#ffffff"
android:layout_marginTop="3px"/>

</TableRow>
</TableLayout>	

<Button android:id="@+id/anaMenu"
android:text="Hisse İşlemleri Ana Menü"
android:drawableRight="@drawable/next" 
android:layout_width="fill_parent" 
android:background="@layout/custom_button"
android:textColor="#ffffff"
android:textSize="20dip"
android:textStyle="bold"
android:layout_height="80dip"/>

<TableLayout
android:id="@+id/hesapTablo"
android:layout_width="fill_parent"
android:layout_height="100px">
<TableRow android:layout_width="fill_parent" 
android:layout_height="fill_parent"
android:layout_weight="1"
android:gravity="center"
android:layout_gravity="center">
<TextView android:text="@string/copyright"
android:textStyle="italic"
android:layout_marginTop="10px"
android:textColor="#767675"/>
</TableRow>
</TableLayout>

</LinearLayout>